@model List<ToDoList>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Layout/Index.cshtml";
	int counter = 0;
}



<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">ToDoList</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">ToDo List</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							This is the basic table view of the ready dashboard :
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Content</th>
									<th scope="col">Date</th>
									<th scope="col">Status</th>
									<th scope="col">Delete</th>
									<th scope="col">Update</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									counter++;
									<tr>
										<td>@counter</td>
										<td>@item.Title</td>
										<td>@item.Date</td>
										@if (item.Status == true)
										{
											<td><a href="/ToDoList/ChangeToDoListStatusToFalse/@item.ToDoListId" class="btn btn-dark">Mark as Undone</a></td>
										}
										else
										{
											<td><a href="/ToDoList/ChangeToDoListStatusToTrue/@item.ToDoListId" class="btn btn-info">Mark as Done</a></td>
										}
										<td><a href="/ToDoList/DeleteToDoList/@item.ToDoListId" class="btn btn-danger">Delete</a></td>
										<td><a href="/ToDoList/UpdateToDoList/@item.ToDoListId" class="btn btn-success">Update</a></td>
									</tr>
								}
							</tbody>
						</table>
						<td><a href="/ToDoList/CreateToDoList/" class="btn btn-primary">New ToDo Item</a></td>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


