@model List<Dotnet_Portfolio.DAL.Entities.Feature>

<section id="home" class="s-home page-hero target-section" data-parallax="scroll" data-image-src="https://enesgunumdogdu.com.tr/wp-content/uploads/2025/04/IMG_7421.jpg" data-natural-width=3000 data-natural-height=2000 data-position-y=center>

    <div class="overlay"></div>
    <div class="shadow-overlay"></div>

    @foreach(var item in Model){
        <div class="home-content">

            <div class="row home-content__main">

                <h3>@item.Title</h3>

                <h1>
                    @* This is Enes Günümdoğdu. <br>
                    I am a Software Developer <br>
                    based in Antalya/Turkey. *@
					@item.Description
                </h1>

                <div class="home-content__buttons">
                    <a href="#works" class="smoothscroll btn btn--stroke">
                        Latest Projects
                    </a>
                    <a href="#about" class="smoothscroll btn btn--stroke">
                        More About Me
                    </a>
                </div>

                <div class="home-content__scroll">
                    <a href="#about" class="scroll-link smoothscroll">
                        <span>Scroll Down</span>
                    </a>
                </div>

            </div>

        </div>
    }


     <!-- end home-content -->

    <ul class="home-social">
        <li>
            <a href="#"><i class="im im-twitter" aria-hidden="true"></i><span>Twiiter</span></a>
        </li>
        <li>
            <a href="#"><i class="im im-instagram" aria-hidden="true"></i><span>Instagram</span></a>
        </li>
    </ul>
    <!-- end home-social -->

</section> <!-- end s-home -->
